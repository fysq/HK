.topbar{
  position: fixed;
  top:0;
  z-index: 999;
  width: 100%;
  transition: 500ms;
}
.topbar .back{
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  bottom:26rpx;
  left:56rpx;
}
.topbar .title{
  width: 50%;
  height: 20rpx;
  text-align: center;
  position: absolute;
  left:25%;
  font-weight: bold;
}
.topbar .logo{
  height: 80rpx;
  filter: drop-shadow(1rpx 0rpx 0 white)
  drop-shadow(0rpx 1rpx 0 white) ;
}


.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: white;
  /* border-radius: 10px; */
  overflow: hidden;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

.modal-header {
  padding: 15px;
  font-size: 18px;
  font-weight: bold;
  border-bottom: 1px solid #eee;
}

.modal-body {
  padding: 15px;
  text-align: center;
}

.modal-image {
  width: 80%;
  /* height: 200px; */
  margin: 10px 0;
  object-fit: cover;
}

.modal-footer {
  padding: 15px;
  display: flex;
  justify-content: flex-end;
}

.modal-btn {
  padding: 2px 30px;
  background-color: #000000;
  color: white;
  border: none;
  /* border-radius: 5px; */
}
