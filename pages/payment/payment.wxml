<view class="topbar" style="height: {{menuheight}}px;background-color: {{barcolor}};">
  <image class="weui-navigation-bar__btn_goback back" src="/static/imgs/back.png" bind:tap="back" mode="" />
  <view class="title" style="margin-top:{{menutop}}px">
    <image class="logo" src="{{imgpre}}{{setinfo.toplogo}}" mode="heightFix" />
  </view>
</view>

<!-- 页面容器 -->
<view class="container" style="margin-top: {{menuheight}}px;">
  <!-- 收货地址选择 -->
  <view class="paytitle">兑换信息</view>
  
  <!-- 商品清单 -->
  <view class="product-list-section">
    <view class="product-item">
      <view class="product-details">
        <view class="product-name">{{prodsinfo.pname}}</view>
        <view class="product-specs">
          <view>款号: {{prodsinfo.pcode}} <text class="num">1件</text></view>
          <view>尺码：{{size}}</view>
        </view>
      </view>
    </view>
  </view>
  
  
  <view class="address-section" bind:tap="chooseaddress">
    <view class="form-item">
      <label>收货地址</label>
      <view class="chooseaddress" bind:tap="chooseaddress">快速填写</view>
      <!-- <view class="subdes">请认真准确填写您的收礼地址，围巾皮带产品一经发出概不退换</view> -->
    </view>
    <view class="form-item">
      <label>姓名</label>
      <input placeholder="请输入您的姓名" bindinput="onNameInput" value="{{name}}"/>
    </view>
    <view class="form-item">
      <label>手机号码</label>
      <input placeholder="请输入您的手机号码" bindinput="onPhoneInput" value="{{phone}}"/>
    </view>
  </view>
  
  <view class="address-section" bind:tap="chooseaddress">
    <!-- <view class="form-item">
      <label>省市区</label>
      <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}" range-key="name">
        {{multiArray[0][multiIndex[0]].name}} {{multiArray[1].length > 0 ?("，" + multiArray[1][multiIndex[1]].name):""}}{{multiArray[2].length > 0 ?("，" + multiArray[2][multiIndex[2]].name ):""}}
      </picker>
    </view> -->
    <view class="form-item">
      <label>配送地区</label>
    </view>
    <view class="form-item">
      <label>详细地址</label>
      <input placeholder="请输入您的详细地址" bindinput="onAddressInput" value="{{address}}"/>
    </view>
  </view>

  <view class="form-item">
      <label>快递方式</label>
    </view>
    <view>
      <!-- <view bindtap="setDefaultDeliverTyp" data-type="1" class="deliverType {{deliverType=='1' ? 'active' : ''}}">德邦快递（免邮费）</view> -->
      <view bindtap="setDefaultDeliverTyp" data-type="2" class="deliverType {{deliverType=='2' ? 'active' : ''}}">顺丰快递</view>
    </view>

    <view class="form-item">
      <label>备注</label>
    </view>
    <view class="form-item">
      <textarea class="mark" value=""/>
      <view class="markdes" bindinput="onMarkInput">如需拎袋请说明(不含礼盒包装)</view>
    </view>


  <!-- 立即支付按钮 -->
  <view class="pay-button" bindtap="goToPay">立即兑换</view>


  <!-- 客服信息 -->
  <view class="customer-service-section">
    <text class="help-question">友情提醒
      请认真准确填写您的收礼地址，围巾皮带产品一经发出概不退换</text>
  </view>
</view>