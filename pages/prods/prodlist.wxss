page{
	padding-bottom: 0;
}
.container {
  /* display: flex; */
  width: 648rpx;
  margin:0 auto;
}

/* 左侧分类样式 */
.category-container {
  width: 20%;
  background-color: #f8f8f8;
	border-right: 1rpx solid #eee;
	position: fixed;
}

.category-list {
  padding: 20rpx 0;
}

.category-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  text-align: center;
}
.category-item .timg{
  width: 80%;
}

.category-item.active {
  color: #ff6b00;
  font-weight: bold;
}

.category-item.active::after {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 60rpx;
  background-color: #ff6b00;
  /* border-radius: 3rpx; */
}

/* 右侧产品样式 */
.product-container {
	width: 100%;
	height:100%;
  background-color: #fff;
}

.section-title {
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}

.product-list {
  /* padding: 20rpx 30rpx; */
}

.product-card {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-info {
  flex: 1;
  width: 100%;
  text-align: center;
  height: 58rpx;
  padding-top: 9rpx;
  line-height: 20rpx;
  font-size: 16rpx;
}

.product-name {
  font-weight:bold;
}

.product-price {
  font-weight:bold;
  color:rgb(128, 27, 27);
}

.add-to-cart {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff6b00;
  color: white;
  /* border-radius: 50%; */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}
.product-list {
  /* padding: 20px 2px; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.product-item {
  width: 316rpx;
  margin-bottom: 20rpx;

}
.product-image {
  width: 100%;
  height: 266rpx;
  position: relative;
}
.product-image image {
  width: 100%;
  height: 100%;
}

.topbox{width: 648rpx;position: fixed;background-color: white;z-index: 99;padding-bottom: rpx;}
.searchbox{width: 100%;position: relative;}
.searchbar{width: 100%;height: 50rpx;line-height: 44rpx;padding-left:26rpx;margin-bottom: 24rpx;font-size: 21rpx;position: relative;}
.searchbox::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border: 1px solid black;
    transform: scale(0.5); /* 缩放伪元素 */
    transform-origin: 0 0;
}
.typelistbox{display: flex;flex-wrap: wrap;}
.typeson{width: 20%;text-align: center;height: 40rpx;line-height: 40rpx;font-size: 21rpx;box-sizing: border-box;color:#666;margin-bottom: 4rpx;position: relative;border:1px solid transparent;}
.typeson.choose{color: black;font-weight: bold;}
.typeson.choose::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 250%;
      height: 250%;
      border: 1px solid black;
      transform: scale(0.4); /* 缩放伪元素 */
      transform-origin: 0 0;
}