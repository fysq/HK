/* 页面容器样式 */
.container {
    padding:0 51rpx;
    background-color: #fff;
}

/* 顶部导航栏样式 */
.nav-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.nav-left,
.nav-right {
    display: flex;
    align-items: center;
}

.nav-left image{
  width: 30px;
  height: 30px;
}
.nav-center {
    text-align: center;
}

.paytitle{
    width: 100%;
    background-color: black;
    color:white;
    text-align: center;
    box-sizing: border-box;
    height: 52rpx;
    line-height: 52rpx;
    font-size: 24rpx;
    letter-spacing: 5rpx;
    margin-bottom: 20rpx;
}

.brand-name {
    font-size: 20rpx;
    font-weight: bold;
}

.brand-location {
    font-size: 20rpx;
    color: #999;
}

.dots {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #000;
    margin-right: 10rpx;
}

/* 收货地址选择样式 */
picker {
  flex: 1;
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
  color: #333;
}

.address-section{
    box-sizing: border-box;
    padding-top:10rpx;
    border-bottom: 1px solid #c5c5c5;
}
.form-item {
  min-height: 50rpx;
  display: flex;
  align-items:center;
  position: relative;
  margin: 5px 0 0;
}
.chooseaddress{
    position: absolute;
    font-size: 20rpx;
    right:0;
    font-weight: 400;
    background-color: white;
    z-index:99;
}
.form-item label {
  width: 90rpx;
  margin-left: 10rpx;
  font-size: 20rpx;
  font-weight: 400;
  text-align: justify;
  text-align-last: justify;
}
.form-item wx-input {
    width: 500rpx;
    height: 50rpx;
    font-size: 20rpx;
    margin-left: 30rpx;
    letter-spacing: 3rpx;
}
/* 礼物选项样式 */
.gift-section {
    margin-bottom: 20rpx;
}

/* 商品清单样式 */
.product-list-section {
    padding: 13rpx 0 15rpx;
    border-bottom: 1px solid rgb(197, 197, 197);
}

.product-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 10rpx;
    padding-left:10rpx;
}

.product-item image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.product-details {
    width: 100%;
}

.product-name {
    font-size: 20rpx;
    padding-bottom: 10rpx;
    font-weight: bold;
}

.product-specs view {
    display: block;
    font-size: 20rpx;
    color: #999;
}
.product-specs .num {
    float: right;
    font-weight: bold;
    color:black;
}

.product-price {
    font-size: 20rpx;
    color: #f00;
}

/* 订单信息汇总样式 */
.order-summary-section {
    margin-bottom: 20rpx;
}

.order-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
}

.info-label {
    font-size: 20rpx;
    color: #333;
}

.info-value {
    font-size: 20rpx;
    color: #666;
}

/* 立即支付按钮样式 */
.pay-button {
    background-color: #000;
    color: #fff;
    padding: 15rpx;
    font-size: 20rpx;
    /* border-radius: 5rpx; */
    margin: 20rpx 0;
    box-sizing: border-box;
    letter-spacing: 3rpx;
    text-align: center;
    width: 100%;

}

/* 底部信息样式 */
.bottom-info-section {
    margin-bottom: 20rpx;
}

.bottom-info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.bottom-info-item text {
    font-size: 20rpx;
    color: #333;
}

/* 客服信息样式 */
.customer-service-section {
    text-align: center;
    color: #666;
    font-size: 20rpx;
}

.help-question {
    font-size: 18rpx;
    color:rgb(156, 156, 156);
    padding-left: 28rpx;
}    

.deliverType.active {
    color: black;
    border: 1rpx solid #ccc;
  }
.deliverType{
    letter-spacing: 3rpx;
    text-align: left;
    width: 70%;
    box-sizing: border-box;
    padding:10rpx 30rpx;
    font-size: 20rpx;
    color:#999;
    margin:11rpx 0px;
    border: 1rpx solid white;
}

.mark{
    border:1px solid #ccc;
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;
    padding:10rpx;
    font-size: 20rpx;
}
.markdes{
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    font-size: 18rpx;
    color:#bbb;
}