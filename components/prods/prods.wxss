
.w100{width: 100%;}

.titlecontainer {
  width: 100%;
  box-sizing: border-box;
  /* margin:20px 0 5px; */
}

.title{
  text-align: center;
  margin: 3px auto 10px;
  font-weight: bold;

}
.top-image {
  width: 100%;
  /* height: 500rpx; */
  display: flex;
  justify-content: center;
  /* margin-bottom: 10px; */
  position: relative;
}
.top-image swiper {
  width: 100%;
  /* height:500rpx; */
}
.top-image image {
  width: 100%;
  height:100%;
}
.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.product-item {
  width: 50%;
  margin-bottom: 10px;
  /* background-color: #eaeaea; */
  padding: 10px;
  box-sizing: border-box;
}
.product-image-swiper {
  width: 100%;
  height: 300rpx;
}
.product-image-swiper image {
  width: 100%;
  height: auto;
}
.product-info {
  text-align: center;
}
.product-type {
  display: block;
  font-size: 12px;
  color: #999;
  margin-bottom: 5px;
}
.product-name {
  font-size: 14px;
  margin-bottom: 5px;
}
.product-price {
  font-size: 14px;
  color: #f00;
}
.bottom-button {
  width: 200rpx;
  margin:0 auto;
  text-align: center;
  /* border-radius: 3px; */
  box-sizing: border-box;
  padding:2px 5px;
  justify-content: center;
  margin-top: 10px;
  background-color: black;
  color: white;
}

.indicator-container2 {
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10px;
  color:#888;
}

.indicator2 {
  width: 10px;
  height: 10px;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 7px;
  /* border-radius: 2px; */
  border:1px solid rgb(255, 255, 255);
}

.indicator2.active {
  background-color: #fff;
}    

.full-screen-video{
  width: 100%;
  height: 100%;
}