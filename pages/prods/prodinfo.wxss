.swipcon{
  position:relative;
}
.product-image-swiper {
  width: 100%;
  height: 625rpx;
}
.product-image-swiper image{
  width: 100%;
  height:100%;
}

.pages{
  position: absolute;
  bottom:30px;
  left:10px;
  background-color: rgba(0,0,0,.2);
  color: white;
  box-sizing: border-box;
  padding: 3px 10px;
  /* border-radius: 10px; */
}

.more{
  position: absolute;
  bottom:10rpx;
  width: 100%;
  color:#555;
  font-size: 18rpx;
}

.resize{
  position: absolute;
  right:25px;
  bottom: 25px;
  width: 40px;
  height: 40px;
  z-index: 9;
}
.product-info {
  margin-top: 10px;
  border-bottom: 1px solid #eaeaea;
  padding-bottom: 10px;
  box-sizing: border-box;
  padding:0 5px;
}
.product-title {
  font-size:20rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  margin: 30rpx 15rpx;
}
.season-tag {
  color: #999;
  margin-bottom:10px;
  font-size: 20rpx;
}

.product-name {
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 5px;
}

.product-subname {
  font-size: 20rpx;
  color:#aaa;
  line-height: 25rpx;
  margin-bottom: 5rpx;
}
.sizebox{
  display: flex;
  justify-content: space-between;
}
.product-price-and-code {
  margin-left: 5px;
  font-size: 14px;
  color: rgb(39, 39, 39);
  display: flex;
  flex-direction: column;
}
.price {
  font-size: 20px;
  color: rgb(0, 0, 0);
  margin:10px 0;
}
.detail-section{
  margin-top: 20px;
}
.detail-header{
  font-size: 16px;
  font-weight: bold;
  padding : 0 10px 5px;
  display: flex;
}
.detail-header .header-title{
  flex: 11;
  font-size: 20rpx;
  line-height: 30px;
}
.detail-header .header-pan{
  flex: 1;
  font-size: 20px;
  line-height: 30px;
}

.detail-content {
  margin-top: 5px;
  font-size: 14px;
  line-height: 24px;
  color:#333;
  display: flex;
  flex-direction: column;
}
.detail-content .text{
  box-sizing: border-box;
  padding: 5px 10px;
  color:#777;
}
.detail-content image{
width: 100%;
}

.action-buttons{
  position: fixed;
  bottom:-3rpx;
  width: 100%;
  display: flex;
  background-color: white;
  box-sizing: border-box;
  padding: 15px 0;
}

.buy-button {
  height: 50rpx;
  line-height: 50rpx;
  width: 35%;
  font-size: 26rpx;
  background-color: rgb(0, 0, 0);
  color: rgb(255, 255, 255);
  letter-spacing: 3rpx;
}

.desimg{
  position: relative;
}
.desimg .img{
  display: block;
  margin: 10rpx 0;
}
